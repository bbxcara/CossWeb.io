<style>
  body {
    font-family: Arial, sans-serif;
    background: #111;
    color: #eaeaea;
    margin: 0;
    padding: 16px;
  }

  .tabber {
    max-width: 900px;
    margin: auto;
  }

  .tab-buttons {
    display: flex;
    border-bottom: 2px solid #333;
    margin-bottom: 12px;
  }

  .tab-buttons button {
    background: #1b1b1b;
    color: #ccc;
    border: none;
    padding: 10px 16px;
    cursor: pointer;
    font-size: 14px;
    border-right: 1px solid #333;
  }

  .tab-buttons button.active {
    background: #262626;
    color: #fff;
    font-weight: bold;
    border-bottom: 2px solid #4aa3ff;
  }

  .tab-content {
    display: none;
    padding: 12px;
    background: #1a1a1a;
    border: 1px solid #333;
  }

  .tab-content.active {
    display: block;
  }
</style>
